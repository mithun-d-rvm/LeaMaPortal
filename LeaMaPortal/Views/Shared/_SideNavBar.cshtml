<script>
    $('.modal-white').on('show.bs.modal', function () {
        setTimeout(function () {
            $('.modal-backdrop').css('background', 'white');
            $('.modal-backdrop').css('opacity', 0);
        }, 10);
    });
    $(".notification-filter").click(function () {
        $(".notification-filter").removeClass('active');
        $(this).addClass('active');
        var filter = $(this).text();
        $.ajax(
                {
                    url: "Notification/getNotifications",
                    type: "GET",
                    data: { filter: filter },
                    contentType: "application/json",
                    success: function (response) {
                        debugger;
                        var data = "";
                        $(".notification-filter-content").empty();                        
                        $.each(response, function (index, obj) {
                            data = "<div>";
                            if (filter == "Renewal") {
                                debugger;
                                data += '<span class="notification-vr-1"> ' + obj.region_name + ' </span>';
                                data += '<span class="notification-vr-2">' + obj.Properties_Name +'</span>';
                                data += '<span class="notification-vr-3">' + obj.Unit_Property_Name +'</span>';
                                data += '<span class="notification-vr-4">' + obj.Agreement_No +'</span>';
                                data += '<span class="notification-vr-5">' + obj.Agreement_Start_Date +'</span>';
                                data += '<span class="notification-vr-6">' + obj.Agreement_End_Date + '</span>';
                            }
                            else if (filter == "PDC Deposits") {
                                data += '<span class="notification-vr-1"> ' + obj.Region_Name + ' </span>';
                                data += '<span class="notification-vr-2">' + obj.Property_Name + '</span>';
                                data += '<span class="notification-vr-3">' + obj.unit_Name + '</span>';
                                data += '<span class="notification-vr-4">' + obj.Tenant_Name + '</span>';
                                data += '<span class="notification-vr-5">' + obj.Agreement_No + '</span>';
                                data += '<span class="notification-vr-5">' + obj.DDChequeNo + '</span>';
                                data += '<span class="notification-vr-5">' + obj.DDChequedate + '</span>';
                                data += '<span class="notification-vr-6">' + obj.pdc_Amount + '</span>';
                            }
                            else if (filter == "Rental Due") {
                                data += '<span class="notification-vr-1"> ' + obj.Region_Name + ' </span>';
                                data += '<span class="notification-vr-2">' + obj.Properties_Name + '</span>';
                                data += '<span class="notification-vr-3">' + obj.Ag_Tenant_Name + '</span>';
                                data += '<span class="notification-vr-4">' + obj.Agreement_No + '</span>';
                                data += '<span class="notification-vr-5">' + obj.payment_mode + '</span>';
                                data += '<span class="notification-vr-6">' + obj.Cheque_No + '</span>';
                                data += '<span class="notification-vr-6">' + obj.cheque_date + '</span>';
                                data += '<span class="notification-vr-6">' + obj.Cheque_Amount + '</span>';
                            }
                            else if (filter == "Utility Dues") {
                                data += '<span class="notification-vr-1"> ' + obj.Region_Name + ' </span>';
                                data += '<span class="notification-vr-2">' + obj.Property_Name + '</span>';
                                data += '<span class="notification-vr-3">' + obj.Unit_Property_Name + '</span>';
                                data += '<span class="notification-vr-4">' + obj.Utility_Name + '</span>';
                                data += '<span class="notification-vr-5">' + obj.Meterno + '</span>';
                                data += '<span class="notification-vr-6">' + obj.billno + '</span>';
                                data += '<span class="notification-vr-6">' + obj.billdate + '</span>';
                                data += '<span class="notification-vr-6">' + obj.Billamount + '</span>';
                                data += '<span class="notification-vr-6">' + obj.duedate + '</span>';
                            }
                            else if (filter == "Agreement approval") {
                                data += '<span class="notification-vr-1"> ' + obj.Region_Name + ' </span>';
                                data += '<span class="notification-vr-2">' + obj.Properties_Name + '</span>';
                                data += '<span class="notification-vr-3">' + obj.Unit_Property_Name + '</span>';
                                data += '<span class="notification-vr-4">' + obj.Ag_Tenant_Name + '</span>';
                                data += '<span class="notification-vr-5">' + obj.Agreement_No + '</span>';
                                data += '<span class="notification-vr-6">' + obj.Total_Rental_amount + '</span>';
                            }
                            data += '</div><hr class="notification-hr" />';
                            $(".notification-filter-content").append(data);
                        });
                        
                    },
                    error: function (jqXhr, textStatus, errorThrown) {
                        alert("Error '" + jqXhr.status + "' (textStatus: '" + textStatus + "', errorThrown: '" + errorThrown + "')");
                    },
                    complete: function () {
                    }
                });
    });
</script>