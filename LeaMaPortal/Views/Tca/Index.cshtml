                        <p>Some text in the modal.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" id="test-modal">Test</button>
                    </div>
                </div>*@

            </div>
        </div>

        <div id="renewalModal" class="modal fade" role="dialog">
            <div class="modal-dialog tca-modal-md">
                <!-- Modal content-->
                @Html.Partial("Renewal/_RenewalDetails")
            </div>
        </div>

        <div id="statusModal" class="modal fade" role="dialog">
            <div class="modal-dialog tca-modal-md">
                <!-- Modal content-->
                @Html.Partial("Status/_StatusDetails")
            </div>
        </div>

    </div>
</div>

