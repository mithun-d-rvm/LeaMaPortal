@model LeaMaPortal.Models.CheckListViewModel

@{
    ViewBag.Title = "Index";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
 
    <div class="leama-inner-block col-md-12 ">



        <div class="col-md-12 leama-fieldset leama-header-top">
            <div class="row">
                <div class="col-md-12 leama-fieldset ">
                    <div class="col-md-2 pull-left">
                        @Html.LabelFor(model => model.Checklist_id, htmlAttributes: new { @class = "leama-field-name" })
                    </div>
                    <div class="col-sm-4">
                        @Html.EditorFor(model => model.Checklist_id, new { htmlAttributes = new { @class = "leama-field form-control" } })
                    </div>
                </div>
                <div class="col-md-12 leama-fieldset ">
