@model LeaMaPortal.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
    
}


<div class="login-page">
    <div class="login-banner">
        <img src="~/Images/Logo-thumb.png" />
        <img src="~/Images/Logo.png" />
    </div>
    <div class="home-login-heading">
        MEMBER LOGIN
    </div>
    <div class="login-main">
        @*<div class="login-head">
            <h1>Login</h1>
        </div>*@
        <div class="login-block">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                if (ViewBag.ErrorMessage != null)
                {
                    <div class="login-error-msg">@ViewBag.ErrorMessage</div><br />
                }
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { placeholder = "User name", @class = "lock" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                <input type="password" name="Password" id="Password" placeholder="Password" autocomplete="off" class="lock" />
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                <div style="height:45px; display:none" id="regdiv">
                    @*@Html.DropDownList("Region_Name", null, "-- Select --", new { @class = "master-form-input form-control" })*@
                </div>
                @*<input type="password" name="password" class="lock" placeholder="Password">*@
                @*<div class="forgot-top-grids">
                        <div class="forgot-grid">
                            <ul>
                                <li>
                                    <input type="checkbox" id="brand1" value="">
                                    <label for="brand1"><span></span>Remember me</label>
                                </li>
                            </ul>
                        </div>
                        <div class="forgot">
                            <a href="#">Forgot password?</a>
                        </div>
                        <div class="clearfix"> </div>
                    </div>*@
                <input type="submit" class="btn btn-default btn-lg form-control" name="Sign In" value="Login" id="btnlogin">
                @*<h3>Not a member?<a href="signup.html"> Sign up now</a></h3>
                    <h2>or login with</h2>
                    <div class="login-icons">
                        <ul>
                            <li><a href="#" class="facebook"><i class="fa fa-facebook"></i></a></li>
